
#include <iostream>
using namespace std;

int main()
{
    int n, i, QT, count = 0;
    int temp1, temp2;
    int BT[100], AT[100], TAT[100], BTR[100], WT[100];
    float awt = 0, atat = 0;
    temp2 = 0;
    cout<<"Enter DOM:";
    cin >> n;
    cout << "Enter burst timee:";
    for (i = 0; i < n; i++)
    {
        cin >> BT[i];
        BTR[i] = BT[i];
    }
    cout << "Enter Time quantam;";
    cin >> QT;
    while (1) {
        for (i = 0, count = 0; i < n; i++)
        {
            temp1 = QT;
            if (BTR[i] == 0)
            {
                count++;
                continue;
            }
            if (BTR[i] > QT)
            {
                BTR[i] = BTR[i] - QT;
            }
            else
                if (BTR[i] >= 0)
                {
                    temp1 = BTR[i];
                    BTR[i] = 0;
                }
            temp2 += temp1;
            TAT[i] = temp2;
        }        
        if (n == count)
            break;
    }
    cout << "\n Process\tBurst time\tTurnarround time\twaiting time\n";
    for (i = 0; i < n; i++) {
        WT[i] = TAT[i] - BT[i];
        awt = awt + WT[i];
        atat = atat + TAT[i];
        cout << "\n"<<i+1<<"\t\t"<<BT[i]<<"\t"<<TAT[i]<<"\t"<<WT[i];

    }
    awt = awt / n;
    atat = atat / n;
    cout << "average wait time="<<awt;
    cout << "average turnaround time=" << atat;


}
